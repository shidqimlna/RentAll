<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorDarkestWhite"
    tools:context=".ui.activity.main.MainActivity">

    <FrameLayout
        android:id="@+id/activity_main_fragmentcontainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/activity_main_bottomnavigationbar" />

    <com.ismaeldivita.chipnavigation.ChipNavigationBar
        android:id="@+id/activity_main_bottomnavigationbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/colorDarkWhite"
        android:elevation="8dp"
        android:padding="8dp"
        app:cnb_menuResource="@menu/bottom_menu" />

</RelativeLayout>