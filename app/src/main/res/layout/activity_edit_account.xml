<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".ui.activity.account.EditAccountActivity">


    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginBottom="30dp"
            android:src="@drawable/logo" />

        <TextView
            android:id="@+id/activity_edit_acc_tv_edit"
            style="@style/CodeFontBold"
            android:layout_marginVertical="24dp"
            android:gravity="center"
            android:text="Edit Account"
            android:textColor="@color/colorWhite"
            android:textSize="32sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="8dp"
            android:background="@color/colorWhite">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:src="@drawable/ic_account" />

            <EditText
                android:id="@+id/activity_edit_acc_et_fullname"
                style="@style/CodeFontRegular"
                android:autofillHints="fullname"
                android:hint="Full Name"
                android:inputType="text" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="8dp"
            android:background="@color/colorWhite">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:src="@drawable/ic_location" />

            <EditText
                android:id="@+id/activity_edit_acc_et_address"
                style="@style/CodeFontRegular"
                android:autofillHints="password"
                android:hint="Address"
                android:inputType="textPostalAddress" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="8dp"
            android:background="@color/colorWhite">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:src="@drawable/ic_phone" />

            <EditText
                android:id="@+id/activity_edit_acc_et_phone"
                style="@style/CodeFontRegular"
                android:autofillHints="password"
                android:hint="Phone"
                android:inputType="phone" />

        </LinearLayout>

        <Button
            android:id="@+id/activity_edit_acc_btn_edit"
            style="@style/CodeFontRegular"
            android:layout_marginTop="12dp"
            android:background="@color/colorWhite"
            android:text="Submit"
            android:textColor="@color/colorPrimary" />

    </LinearLayout>

</RelativeLayout>