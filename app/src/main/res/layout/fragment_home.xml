<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.main.HomeFragment">

    <TextView
        android:id="@+id/fragment_home_tv_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/fragment_home_btn_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PROFILE" />

    <EditText
        android:id="@+id/fragment_home_et_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ex. Mobil" />

    <Button
        android:id="@+id/fragment_home_btn_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SEARCH" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/fragment_home_rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>