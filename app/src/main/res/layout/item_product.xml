<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="198dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/item_user_product_cardView"
        android:layout_width="150dp"
        android:layout_height="180dp"
        android:layout_gravity="center"
        android:layout_margin="8dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:baselineAligned="false"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/item_user_product_iv_product"
                android:layout_width="match_parent"
                android:layout_height="100dp" />

            <TextView
                android:id="@+id/item_user_product_tv_name"
                style="@style/CodeFontBold"
                android:layout_margin="4dp"
                android:ellipsize="end"
                android:maxLines="2" />

            <TextView
                android:id="@+id/item_user_product_tv_price"
                style="@style/CodeFontRegular"
                android:layout_margin="2dp"
                android:ellipsize="end"
                android:maxLines="2" />

            <TextView
                android:id="@+id/item_user_product_tv_owner"
                style="@style/CodeFontRegular"
                android:layout_margin="2dp"
                android:ellipsize="end"
                android:maxLines="2" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>