<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="208dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/item_product_cardView"
        android:layout_width="150dp"
        android:layout_height="184dp"
        android:layout_gravity="center"
        android:layout_margin="8dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:baselineAligned="false"
            android:padding="8dp"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                app:cardElevation="8dp">

                <ProgressBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center" />

                <ImageView
                    android:id="@+id/item_product_iv_product"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:scaleType="centerCrop" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/item_product_tv_name"
                style="@style/CodeFontBold"
                android:layout_margin="2dp"
                android:ellipsize="end"
                android:maxLines="1" />

            <TextView
                android:id="@+id/item_product_tv_price"
                style="@style/CodeFontRegular"
                android:layout_margin="2dp"
                android:ellipsize="end"
                android:maxLines="1" />

            <TextView
                android:id="@+id/item_product_tv_owner"
                style="@style/CodeFontRegular"
                android:layout_margin="2dp"
                android:ellipsize="end"
                android:maxLines="1" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>